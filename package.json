{
  "name": "ext-outlook-cal-opener",
  "version": "0.0.1",
  "description": "",
  "author": "ellreka",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"rimraf public/build && node esbuild.js --watch\" \"pnpm run dev:css\"",
    "build": "rimraf public/build && NODE_ENV=production node esbuild.js && pnpm run build:css",
    "dev:css": "tailwindcss -i ./src/popup.css -o ./public/build/popup.css --watch",
    "build:css": "tailwindcss -i ./src/popup.css -o ./public/build/popup.css --minify",
    "build:zip": "pnpm build && zip -r build.zip public/",
    "fmt": "rome format ./src",
    "fmt:write": "rome format ./src --write"
  },
  "devDependencies": {
    "@azure/msal-browser": "^2.34.0",
    "@azure/msal-node": "^1.16.0",
    "@microsoft/microsoft-graph-client": "^3.0.5",
    "@microsoft/microsoft-graph-types": "^2.26.0",
    "@types/chrome": "^0.0.197",
    "@types/node": "^18.15.9",
    "@types/webextension-polyfill": "^0.9.2",
    "autoprefixer": "^10.4.14",
    "concurrently": "^7.6.0",
    "daisyui": "^2.51.5",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "esbuild": "^0.15.18",
    "postcss": "^8.4.21",
    "preact": "^10.13.1",
    "rimraf": "^3.0.2",
    "rome": "0.10.1-next",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5",
    "webextension-polyfill": "^0.10.0"
  },
  "volta": {
    "node": "18.15.0"
  }
}
